<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemAlertaFragment">

    <TextView
        android:id="@+id/persona_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/alerta_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActualizaciÃ³n de datos"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/persona_nombre"
        app:layout_constraintMarginTop="8dp"/>

    <TextView
        android:id="@+id/alerta_prioridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importante"
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alerta_titulo"
        app:layout_constraintMarginTop="4dp"/>

    <TextView
        android:id="@+id/alerta_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:30 a.m."
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alerta_prioridad"
        app:layout_constraintMarginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>