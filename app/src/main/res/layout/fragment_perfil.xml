<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_profile_placeholder" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nameStudent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:elevation="2dp"
                android:layout_marginTop="8dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/profile_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frase para poner en descripción,Frase para poner en descripción"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="#888888" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tokens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 Tokens"
                    android:background="@drawable/rounded_red_background"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                />

                <TextView
                    android:id="@+id/soles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 Soles"
                    android:background="@drawable/rounded_green_background"
                    android:padding="8dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/student_status_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESTUDIANTE"
                android:layout_marginTop="16dp" />
            <Button
                android:id="@+id/major_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNIVERSIDAD SEÑOR DE SIPAN"
                android:backgroundTint="#3B82F6"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />


            <Button
                android:id="@+id/major_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGENIERÍA DE SISTEMAS"
                android:backgroundTint="#3B82F6"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

            <!-- Secciones de mensajes y economía -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mensajes"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="goToMessagesActivity" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Economía"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="goToEconomyActivity" />
            </LinearLayout>

            <!-- Asesorías -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asesorías (3)"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_sample1"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_sample2"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_sample3"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_sample4"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noviembre de 17 del 2025"
                android:layout_marginTop="16dp"
                android:textColor="#888888"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
